{
  "version": 2,
  "name": "jsxgraph-mcp-server",
  "builds": [
    {
      "src": "vercel-server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp",
      "dest": "/vercel-server.js"
    },
    {
      "src": "/sse", 
      "dest": "/vercel-server.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel-server.js"
    }
  ],
  "functions": {
    "vercel-server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
