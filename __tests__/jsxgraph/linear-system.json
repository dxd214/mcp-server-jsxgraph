{
  "name": "generate_linear_system",
  "description": "Generate linear equations and inequality systems using JSXGraph. Visualize systems of linear equations, linear inequalities with feasible regions, linear programming problems with objective functions, and find intersection points. Perfect for solving systems of equations and linear optimization problems.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "equations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "a": {
              "type": "number",
              "description": "Coefficient of x (ax + by = c)"
            },
            "b": {
              "type": "number",
              "description": "Coefficient of y (ax + by = c)"
            },
            "c": {
              "type": "number",
              "description": "Constant term (ax + by = c)"
            },
            "color": {
              "type": "string",
              "default": "#0066cc",
              "description": "Color of the line"
            },
            "strokeWidth": {
              "type": "number",
              "default": 2,
              "description": "Width of the line"
            },
            "name": {
              "type": "string",
              "description": "Label for the equation"
            },
            "dash": {
              "type": "number",
              "default": 0,
              "description": "Dash style (0=solid, 1=dotted, 2=dashed)"
            }
          },
          "required": ["a", "b", "c"]
        },
        "description": "Array of linear equations to plot (ax + by = c form)"
      },
      "inequalities": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "a": {
              "type": "number",
              "description": "Coefficient of x (ax + by ≤/≥/</> c)"
            },
            "b": {
              "type": "number",
              "description": "Coefficient of y (ax + by ≤/≥/</> c)"
            },
            "c": {
              "type": "number",
              "description": "Constant term (ax + by ≤/≥/</> c)"
            },
            "type": {
              "type": "string",
              "enum": ["<=", ">=", "<", ">"],
              "description": "Type of inequality"
            },
            "fillColor": {
              "type": "string",
              "default": "#0066cc",
              "description": "Fill color for the feasible region"
            },
            "fillOpacity": {
              "type": "number",
              "default": 0.2,
              "description": "Opacity of the fill (0-1)"
            },
            "borderColor": {
              "type": "string",
              "default": "#0066cc",
              "description": "Color of the boundary line"
            },
            "borderDash": {
              "type": "number",
              "description": "Dash style for strict inequalities (< or >)"
            },
            "name": {
              "type": "string",
              "description": "Label for the inequality"
            }
          },
          "required": ["a", "b", "c", "type"]
        },
        "description": "Array of linear inequalities to plot and shade"
      },
      "showIntersections": {
        "type": "boolean",
        "default": true,
        "description": "Whether to highlight intersection points"
      },
      "showFeasibleRegion": {
        "type": "boolean",
        "default": true,
        "description": "Whether to highlight the feasible region for inequalities"
      },
      "objectives": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "a": {
              "type": "number",
              "description": "Coefficient of x in objective function (z = ax + by)"
            },
            "b": {
              "type": "number",
              "description": "Coefficient of y in objective function (z = ax + by)"
            },
            "name": {
              "type": "string",
              "default": "z",
              "description": "Name of the objective function"
            },
            "showOptimal": {
              "type": "boolean",
              "default": true,
              "description": "Whether to find and show optimal points"
            },
            "type": {
              "type": "string",
              "enum": ["max", "min"],
              "default": "max",
              "description": "Optimization type"
            }
          },
          "required": ["a", "b"]
        },
        "description": "Objective functions for linear programming"
      },
      "points": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "description": "X coordinate"
            },
            "y": {
              "type": "number",
              "description": "Y coordinate"
            },
            "name": {
              "type": "string",
              "description": "Label for the point"
            },
            "color": {
              "type": "string",
              "default": "#ff0000",
              "description": "Color of the point"
            },
            "size": {
              "type": "number",
              "default": 4,
              "description": "Size of the point"
            }
          },
          "required": ["x", "y"]
        },
        "description": "Additional points to highlight"
      },
      "style": {
        "type": "object",
        "properties": {
          "theme": {
            "type": "string",
            "enum": ["default", "dark", "light"],
            "default": "default",
            "description": "Set the theme for the math chart."
          },
          "backgroundColor": {
            "type": "string",
            "default": "#ffffff",
            "description": "Background color of the math chart, such as '#fff'."
          },
          "grid": {
            "type": "boolean",
            "default": true,
            "description": "Whether to show grid lines."
          },
          "axis": {
            "type": "boolean",
            "default": true,
            "description": "Whether to show axis lines."
          }
        },
        "description": "Custom style configuration for the chart."
      },
      "width": {
        "type": "number",
        "default": 800,
        "description": "Set the width of the math chart, default is 800."
      },
      "height": {
        "type": "number",
        "default": 600,
        "description": "Set the height of the math chart, default is 600."
      },
      "title": {
        "type": "string",
        "default": "",
        "description": "Set the title of the math chart."
      },
      "axisXTitle": {
        "type": "string",
        "default": "x",
        "description": "Label for X axis"
      },
      "axisYTitle": {
        "type": "string",
        "default": "y",
        "description": "Label for Y axis"
      },
      "boundingBox": {
        "type": "array",
        "items": {
          "type": "number"
        },
        "minItems": 4,
        "maxItems": 4,
        "default": [-10, 10, 10, -10],
        "description": "The bounding box for the chart [xmin, ymax, xmax, ymin], default is [-10, 10, 10, -10]."
      },
      "keepAspectRatio": {
        "type": "boolean",
        "default": false,
        "description": "Whether to keep aspect ratio."
      },
      "showCopyright": {
        "type": "boolean",
        "default": false,
        "description": "Whether to show JSXGraph copyright."
      },
      "showNavigation": {
        "type": "boolean",
        "default": true,
        "description": "Whether to show navigation controls."
      },
      "zoom": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "factorX": {
            "type": "number",
            "default": 1.25
          },
          "factorY": {
            "type": "number",
            "default": 1.25
          },
          "wheel": {
            "type": "boolean",
            "default": true
          },
          "needShift": {
            "type": "boolean",
            "default": false
          },
          "min": {
            "type": "number",
            "default": 0.1
          },
          "max": {
            "type": "number",
            "default": 10
          }
        },
        "description": "Zoom configuration for the chart."
      },
      "pan": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "needShift": {
            "type": "boolean",
            "default": false
          },
          "needTwoFingers": {
            "type": "boolean",
            "default": false
          }
        },
        "description": "Pan configuration for the chart."
      }
    },
    "$schema": "http://json-schema.org/draft-07/schema#"
  }
}
