run = "npm install && npm run build && node build/index.js --transport streamable --port $PORT"
entrypoint = "build/index.js"

[nix]
channel = "stable-23_11"

[env]
PORT = "3000"
NODE_ENV = "production"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages]
[languages.javascript]
pattern = "**/*.js"
syntax = "javascript"

[languages.typescript]
pattern = "**/*.ts"
syntax = "typescript"

[languages.json]
pattern = "**/*.json"
syntax = "json"
