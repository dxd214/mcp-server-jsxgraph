{
  "name": "mcp-server-jsxgraph",
  "description": "A Model Context Protocol server for generating mathematical visualizations using JSXGraph. This is a TypeScript-based MCP server that provides interactive mathematical chart generation capabilities for functions, geometry, parametric curves, and more.",
  "version": "0.0.1",
  "main": "standalone.js",
  "types": "build/index.d.ts",
  "exports": {
    "./sdk": "./build/sdk.js"
  },
  "scripts": {
    "prebuild": "rm -rf build/*",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "postbuild": "chmod +x build/index.js",
    "vercel-build": "npm run build",
    "start": "npm run build && node build/index.js --transport streamable",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "lint": "biome check --write && biome format --write"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write",
      "biome format --write",
      "biome lint"
    ]
  },
  "bin": {
    "mcp-server-jsxgraph": "./build/index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": ["build"],
  "keywords": ["jsxgraph", "mcp", "mathematical-visualization", "geometry", "functions", "parametric-curves", "mathematics"],
  "repository": {
    "type": "git",
    "url": "https://github.com/dxd214/mcp-server-jsxgraph"
  },
  "author": {
    "name": "dxd",
    "url": "https://github.com/dxd214"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "jsxgraph": "^1.10.1",
    "puppeteer": "^23.0.0",
    "zod": "^3.25.16",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@modelcontextprotocol/inspector": "^0.14.2",
    "@types/node": "^22.15.21",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
